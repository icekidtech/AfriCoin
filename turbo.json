{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*.local"],
  "globalEnv": ["NODE_ENV"],
  "tasks": {
    "dev": {
      "cache": false,
      "persistent": true
    },
    "build": {
      "outputs": ["dist/**", "build/**"],
      "dependsOn": ["^build"]
    },
    "test": {
      "outputs": ["coverage/**"],
      "dependsOn": ["build"]
    },
    "test:coverage": {
      "outputs": ["coverage/**"],
      "dependsOn": ["build"]
    },
    "lint": {
      "outputs": [".eslintcache"],
      "cache": false
    },
    "format": {
      "cache": false
    },
    "compile": {
      "outputs": ["dist/**", "typechain/**"],
      "cache": false
    },
    "deploy:sepolia": {
      "cache": false,
      "dependsOn": ["compile"]
    }
  }
}